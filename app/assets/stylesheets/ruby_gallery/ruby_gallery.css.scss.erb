@import "bourbon";

@font-face {
    font-family: "entypo";
    src: url(<%= asset_path "ruby_gallery/entypo.eot" %>);
    src: url(<%= asset_path "ruby_gallery/entypo.eot?#iefix"%>) format('embedded-opentype'),
         url(<%= asset_path "ruby_gallery/entypo.woff"%>) format('woff'),
         url(<%= asset_path "ruby_gallery/entypo.ttf"%>) format('truetype'),
         url(<%= asset_path "ruby_gallery/entypo.svg#EntypoRegular"%>) format('svg');
    font-weight: normal;
    font-style: normal;
}

span.entypo-icon-1{
  font-family: "entypo";
  font-size: 3em;
  color: #004F67;
  cursor: pointer;
}

form.fileupload{
  width:75px;
  float:left;
}

div.upload-box{
  @include clearfix;
  display: block;
  margin: 0 auto;
  width:420px;
  div.legend {
    float: left;
    width: 100%;
    border-bottom: 3px solid #bbb;
    margin-bottom: 10px;
    color: #999;
    font-weight: bold;
    font-size: 14px;
  }
  
  div.form-box {
    float: left;
  }
}


div.file-box{
  float: left;
  @include clearfix;
  display:block;
  margin-bottom: 5px;
  width: 100%;
  border: 1px solid #999;
  @include box-shadow(1px 1px 3px 0px #999);
  ul#photos_album {
    width: 100%;
    float: left;
    @include clearfix;
    height: 275px;
    overflow-y: auto;
    list-style: none;
    display: inline-block;
    margin-left: -28px;
    
    li.photo-cat {
      position: relative;
      float: left;
      width: 130px;
      height: 125px;
      margin-top: 10px;
      text-align: center;
      span.remove-photo {
        position: absolute;
        top: -15px ;
        right: 10px;
      }
      a.gallery-colorbox{
        @include clearfix;
        text-decoration: none;
        img{
          float: left;
          @include box-shadow(1px 0px 3px 0px #999);
          
        }
      }
    }
  }
}

span.upload-button {
  float:none;
  @include button(pill);
  background: green;
}

div.pic-icon{
  background: url(<%= asset_path "ruby_gallery/upload_processing.gif"%>);
  margin:45px;
  width:35px;
  height:35px;
}


span.upload-button.have-file{
  float:none;
  @include button(pill,#FCF0BF);  
  background: red;
}

.hide {
  display: none;
}

.blur{
  opacity:0.3;
}

.close-link {
  text-decoration: none;
  color: #2D67C4 !important;
  
  &:hover{
    text-decoration: none;
    color: #2D67C4 !important;
    background: none; 
  }
}